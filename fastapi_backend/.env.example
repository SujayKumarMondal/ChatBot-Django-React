# ============================================================
# ChatPaat Backend - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# ============================================================

# ============================================================
# Django Configuration
# ============================================================
# Secret key for Django (change this in production!)
SECRET_KEY=your-secret-key-here-change-in-production

# Set to False in production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================
# Database Configuration
# ============================================================
# Choose one: Use SQLite for local development, PostgreSQL for production

# SQLite (Local Development - Default)
# No additional configuration needed, uses db.sqlite3

# PostgreSQL (Production)
USE_POSTGRES=False
DB_ENGINE=
DB_NAME=
DB_USER=
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=
# ============================================================
# JWT (JSON Web Token) Configuration
# ============================================================
# Used for authentication tokens
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================================
# Google OAuth Configuration
# ============================================================
# Get these from: https://console.cloud.google.com/
# 1. Create a new project
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials (Web Application)
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
FRONTEND_URL=http://localhost:5173

# ============================================================
# Groq API Configuration (for AI responses)
# ============================================================
# Get API key from: https://console.groq.com/
# Alternative: Use Gemini API instead
GROQ_API_KEY=your-groq-api-key-here
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# ============================================================
# Gemini API Configuration (Alternative to Groq)
# ============================================================
# Get API key from: https://makersuite.google.com/app/apikey
# Uncomment and use if using Gemini instead of Groq
# GEMINI_API_KEY=your-gemini-api-key-here
# GEMINI_API_URL=https://generativelanguage.googleapis.com/v1/models/gemini-pro:generateContent

# ============================================================
# Email Configuration (SMTP)
# ============================================================
# For password reset and notifications
# Using Gmail: Create App Password https://myaccount.google.com/apppasswords

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SENDER_EMAIL=your-sender-email@gmail.com  # Which email was used to create sendgrid account

# ============================================================
# Optional: SendGrid Configuration
# ============================================================
# Alternative to SMTP
# Get API key from: https://sendgrid.com/
# SENDGRID_API_KEY=your-sendgrid-api-key-here

# ============================================================
# Server Configuration
# ============================================================
# Backend server host and port
BACKEND_HOST=127.0.0.1
BACKEND_PORT=7004

# ============================================================
# Environment
# ============================================================
# Options: development, staging, production
ENVIRONMENT=development
